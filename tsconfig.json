{
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "baseUrl": "./src",
    "outDir": "build",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "removeComments": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@lc/core":            [ "./core/index.ts" ],
      "@lc/utils":           [ "./utils/index.ts" ],
      "@lc/geometry":        [ "./geometry/index.ts" ],
      "@lc/pieces":          [ "./pieces/index.ts" ],
      "@lc/piece-movements": [ "./pieces/movements/index.ts" ]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}