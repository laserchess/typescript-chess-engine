{
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "outDir": "build",
    "module": "es6",
    "moduleResolution": "nodenext",
    "removeComments": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "geometry": [ "geometry/index.ts" ],
      "utils": [ "utils/index.ts" ],
      "pieces": [ "pieces/index.ts" ],
      "piece/movements": [ "pieces/movements/index.ts" ],
      "core": [ "core/index.ts" ]

    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}